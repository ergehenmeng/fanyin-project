<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="p2p" targetRuntime="MyBatis3">
    	
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"></plugin>  
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"></plugin> 
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"></plugin> 

        <!-- CustomeCommentGenerator:该类为自定义注释类,可修改注释生成规则 -->
        <commentGenerator type="org.mybatis.generator.internal.CustomeCommentGenerator">
            
            <!-- 如果生成日期，会造成即使修改一个字段，整个实体类所有属性都会发生变化，不利于版本控制，所以设置为true -->
            <property name="suppressDate" value="true" />
            <!-- false:不去除注释 -->
            <property name="suppressAllComments" value="false" />
            <!-- 生成文件字符集 -->
            <property name="javaFileEncoding" value="UTF-8"/>
            
        </commentGenerator>

        
        <!--数据库链接URL，用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
            connectionURL="jdbc:mysql://127.0.0.1:3306/p2p" userId="root" password="root">
        </jdbcConnection>
        
        <javaTypeResolver>
            <!-- 不使用decimal来映射decimal或者number列 -->
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>
        
        
        
        <!-- 生成模型的包位置 -->
        <javaModelGenerator targetPackage="com.p2p.model"
            targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>
        <!-- 生成mapper.xml文件位置 -->
        <sqlMapGenerator targetPackage="mapper"
            targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"  />

        </sqlMapGenerator>
        
        <!-- 生成mapper的接口位置 -->
        <javaClientGenerator type="XMLMAPPER"
            targetPackage="com.p2p.mapper"  targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>
        
        <!-- 注意该处必须一次只生成一个表的mapper,pojo,xml -->
        <table tableName="system_operator" domainObjectName="SystemOperator"
            enableCountByExample="false" enableUpdateByExample="false"
            enableDeleteByExample="false" enableSelectByExample="false"
            selectByExampleQueryId="false" >
            <columnRenamingRule searchString="t_" replaceString=""/>
        </table>
    </context>
</generatorConfiguration>